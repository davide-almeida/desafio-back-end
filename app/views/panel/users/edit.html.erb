<!-- Show errors -->
<% if @user.errors.any? %>
  <div class="alert alert-danger alert-dismissable">
    <button type="button" class="close" data-dismiss="alert" aria-hidden="true">×</button>
    <!-- message -->
    <ul>
      <% @user.errors.full_messages.each do |message| %>
        <li><%= message %></li>
      <% end %>
    </ul>

  </div>
<% end %>

<div class="container-fluid">

    <!-- Page Heading -->
    <h1 class="h3 mb-2 text-gray-800">Usuários</h1>
    <p class="mb-4"></p>

    <!-- User update form -->
    <div class="card shadow mb-4">
        <div class="card-header py-3">
            <h6 class="m-0 font-weight-bold text-primary">Formulário de edição</h6>
        </div>
        <div class="card-body">
            <%= form_for([:panel, @user], :html => {:class => 'form-horizontal form-label-left'}) do |f| %>
                <div class="form-group">
                    <label for="inputEmail">Email</label>
                    <%= f.email_field :email, required:"required", class:"form-control", id:"inputEmail", placeholder:"Ex.: user@user.com.br", autofocus: true %>
                </div>
                <div class="form-group">
                    <label for="inputPassword">Senha</label>
                    <%= f.password_field :password, class:"form-control", id:"inputPassword",  placeholder:"Digite sua senha" %>
                </div>
                <div class="form-group">
                    <label for="inputPasswordConfirm">Confirmação da senha</label>
                    <%= f.password_field :password_confirmation, class:"form-control", id:"inputPasswordConfirm",  placeholder:"Digite a senha novamente" %>
                </div>
                <div class="form-group">
                    <label>Status</label>
                    <%= f.select(:status, @status_options_for_select, {}, {:class =>"form-control", :tabindex => "-1"}) %>
                </div>
                <div class="form-group">
                    <%= f.submit "Enviar", class:"btn btn-primary", data: { disable_with: "Aguarde..." } %>
                </div>
            <% end %>
        </div>
        <div class="card-footer py-3"></div>
    </div>
</div>
